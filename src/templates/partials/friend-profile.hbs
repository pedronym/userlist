<div class="friend-profile">
  <iframe width="100%" height="400" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/view?key={{apiKey}}&center={{friend.lat}},{{friend.long}}&zoom=12&maptype=satellite" allowfullscreen>
  </iframe>

  <div class="friend" data-uuid="{{friend.id}}">
    <img src={{friend.image}} alt={{friend.name}}>
    <h1 class="friend__name">{{friend.name}}</h1>
    <p class="friend__bio">{{friend.bio}}</p>
    <small class="friend__address">{{friend.address}}</small>
    {{friend.lat}}, {{friend.long}}
  </div>

</div>
